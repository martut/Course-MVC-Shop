<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Witamy w naszym sklepie</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#3c3c67">
            <div class="container">
                <div class="navbar-header" >
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Sklep InFamous", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Produkty <span class="caret"></span></a>
                           
                                @Html.Action("NavbarMenu", "Home")
                                
                              
                                
                            
                        </li>

                        @*<li>@Html.ActionLink("Produkty", "Index", "Home")</li>*@
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                        @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div  class="container">
            <div class="jumbotron">
                <h1 class="text-center">InFamous Sklep</h1>
                @*<img src="@Url.Content("~/Content/Images/if-logo-main.png")" class="center-block" />*@
            </div>
        </div>
    </header>


    <div class="container body-content">


        @RenderBody()
       

    </div>    
    <hr />
        <footer>
            <div class="container">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="span2 col-md-3" >
                            <ul class="unstyled">
                                
                                InFamous
                                @Html.ActionLink("Produkty", "AdminPages", "Home", new { controllername = "Product" }, null)
                                <li>
                                    @Html.ActionLink("O Nas", "StaticContent","Home", new { viewname = "About" },null)
                               
                                </li>
                                <li>@Html.ActionLink("Kontakt", "StaticContent", "Home", new { viewname = "Contact" }, null)</li>
                                <li>@Html.ActionLink("Regulamin", "StaticContent", "Home", new { viewname = "Regulamin" }, null)</li>
                                
                            </ul>
                        </div>
                        <div class="span2 col-md-3">
                            <ul class="unstyled">
                                Użytkownik
                                <li><a href="#">Koszyk</a></li>
                                <li><a href="#">Zamówienia</a></li>
                                <li><a href="#">Konto</a></li>

                                
                                
                            </ul>
                        </div>
                        <div class="span2 col-md-3">
                            <ul class="unstyled">
                                Sklep
                                <li><a href="#">Produkty</a></li>
                                <li><a href="#">Home</a></li>
                                
                            </ul>
                        </div>
                        
                    </div>
                    <div class="col-md-3">  <p>&copy; @DateTime.Now.Year - Sklep InFamous</p></div>

                </div>
                
            </div>


        </footer>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
