@model SklepKompMVC.ViewModel.HomeViewModel
@using SklepKompMVC.Infrastructure
@{
    ViewBag.Title = "Home Page";
}


<section>
    <div class="row">
        @foreach (var newArrival in Model.NewArrivals)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <a href="@Url.Action("Details","Store",new { id = newArrival.ProductId })">
                        <img src="@Url.ProductCoverPath(newArrival.ProductCoverFileName)" alt="@newArrival.ProductName">
                    </a>

                     <div class="caption">
                        <h3 class="text-center">@newArrival.ProductName</h3>
                        
                        <p>
                        <a href="@Url.Action("Details","Store",new { id = newArrival.ProductId })" class="btn btn-primary" role="button">Szczegóły</a>
                            <a href="@Url.Action("AddToCart","Cart",new { id = newArrival.ProductId })" class="btn btn-default" role="button">Do Koszyka</a>
                        </p>
                    </div>
                </div>

            </div>

        }



    </div>
</section>

<section>
    <div class="row">
        @foreach (var bestseller in Model.Bestsellers)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <a href="@Url.Action("Details","Store",new { id = bestseller.ProductId })">
                        <img src="@Url.ProductCoverPath(bestseller.ProductCoverFileName)" alt="@bestseller.ProductName">
                    </a>
                    <div class="caption">
                        <h3 class="text-center">@bestseller.ProductName</h3>

                        <p>
                        <a href="@Url.Action("Details","Store",new { id = bestseller.ProductId })" class="btn btn-primary" role="button">Szczegóły</a> 
                        <a href="@Url.Action("AddToCart","Cart",new { id = bestseller.ProductId })" class="btn btn-default" role="button">Do Koszyka</a>
                        </p>
                    </div>
                </div>

            </div>

        }

        
    </div>
        
</section>




<div class="row text-center">
    <div >
        <h2>Opis firmy InFamous</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
    </div>

</div>