@model IEnumerable<SklepKompMVC.Models.Product>
@using SklepKompMVC.Infrastructure


<section>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <a href="@Url.Action("Details","Store",new { id = product.ProductId })">
                        <img class="img-rounded img-responsive" src="@Url.ProductCoverPath(product.ProductCoverFileName)" alt="@product.ProductName">
                    </a>

                    <div class="caption">
                        <h3 class="text-center">@product.ProductName</h3>

                        <p>
                            <a href="@Url.Action("Details","Store",new { id = product.ProductId })" class="btn btn-primary" role="button">Szczegóły</a>
                            <a href="@Url.Action("AddToCart","Cart",new { id = product.ProductId })" class="btn btn-default" role="button">Do Koszyka</a>
                        </p>
                    </div>
                </div>

            </div>

        }



    </div>
</section>